html, body {
/* to get background image to cover entire height of screen */
	#sidebar-and-content {
		padding-top: 30px;
		position: fixed;
		top: 58px;
		bottom: 00px;
		width: 100%;
		background-image: url("/assets/global/tasky_pattern.png");
	}
	#content {
		margin-left: 80px;
		padding-left: 24px;
		padding-top: 10px;
	    width: 66%;
	    top: 78px;
	    bottom: 20px;
	    overflow-y: auto;
	    position: fixed;
