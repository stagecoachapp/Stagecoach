$sc_blue: #54B8FF;
$sc_gray: #A2A7AB;

body {
  padding-top: 60px !important;
}

.jquery_form_error_message {
  display: block;
  margin-top: 3px;
}

footer {
	margin-top: 20px;
	padding-bottom: 20px;
}

footer p {
	margin-left: 176px;
	position: absolute;
}

#blog {
	float: right;
	margin-right: 180px;
}

#about {
	float: right;
	margin-right: 20px;
}

.username li {
	float: right;
}

#container-shifting-div {
	margin-left: 100px;
}

.sidebar {
	height: 100%;
	background-image: url("<%= image_path "sidebar/sidebar_background.png" %>");
	width: 100px;
	border-right: 1px solid gray;
	float: left;
	position: fixed;
	margin-top: -20px;
}

.sidebar-content {
	padding-top: 20px;
	padding-bottom: 20px;
	background-image: none;
	background-color: $sc_gray;
}

.sidebar-content ul {
	list-style-type: none;
}

.sidebar-content li {
	margin-bottom: 5px;
	border-bottom: 1px solid gray;
}

.sidebar-content li a {
	color: white;
}