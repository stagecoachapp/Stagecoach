<%= form_for(@user) do |f| %>
  <ul data-role="listview" data-inset="true">
    <li data-role="fieldcontain">
      <label for="users-new-form-form-name">Name: </label>
      <%= f.text_field :name, :id => "users-new-form-form-name" %>
    </li>
    <li data-role="fieldcontain">
      <label for="users-new-form-form-email">Email: </label>
      <%= f.text_field :email, :id => "users-new-form-form-email" %>
    </li>
    <li data-role="fieldcontain">
      <label for="users-new-form-form-phonenumber">Phone: </label>
      <%= f.text_field :phonenumber, :id => "users-new-form-form-phonenumber" %>
    </li>
    <li class="ui-body ui-body-b">
				<fieldset class="ui-grid-a">
						<%= f.submit :value => 'Update Profile' %>
			    </fieldset>
			</li>
  </ul>
<% end %>