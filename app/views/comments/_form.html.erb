<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :rows => 5, :cols => 30 %>
  </div>
  <div class="actions">
    <%= f.submit value="Post Comment", :class => "btn btn-medium" %>
  </div>
<% end %>